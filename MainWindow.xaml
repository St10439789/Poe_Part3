<Window x:Class="Poe_Part3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poe_Part3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    

        <Window.Resources>
            <!-- Global Button Style for Hover and Press -->
            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="10,5">
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF2E4DA7"/>
                                    <Setter Property="BorderBrush" Value="#FF2E4DA7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF192C6B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>

        <Grid Margin="20">
            <Border Background="White"
                CornerRadius="12"
                BorderBrush="#FF1E3A8A"
                BorderThickness="2"
                Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Direction="270"/>
                </Border.Effect>
                


                <Grid>
                    <!-- Title -->
                    <TextBlock Text="Cybersecurity Awareness Bot"
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           Foreground="#1E3A8A" />

                    <!-- Chat messages -->
                    <ListBox x:Name="show_chats"
                         Margin="0,50,0,130"
                         Background="#EEF3FB" Foreground="#222"
                         FontSize="14" BorderBrush="#CCC" BorderThickness="1" />

                    <!-- User input -->
                    <TextBox x:Name="user_question"
                         Height="30"
                         Margin="0,0,130,70"
                         VerticalAlignment="Bottom"
                         FontSize="14"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#888"
                         BorderThickness="1"/>

                    <!-- Send Button -->
                    <Button Content="Send"
                        Height="30" Width="100"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,70"
                        Click="Submit_Click"
                        Background="#FF1E3A8A"
                        Foreground="White"
                        BorderBrush="#FF1E3A8A"
                        FontWeight="Bold"/>

                    <!-- Bottom Buttons -->
                    <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10">
                        <Button Content="Manage Tasks"
                            Width="120" Margin="5"
                            Click="ManageTasks_Click"
                            Background="#7A42F4"
                            Foreground="White"
                            BorderBrush="#7A42F4"/>

                        <Button Content="Start Quiz"
                            Width="120" Margin="5"
                            Click="StartQuiz_Click"
                            Background="#1E88E5"
                            Foreground="White"
                            BorderBrush="#1E88E5"/>

                        <Button Content="Show Log"
                            Width="120" Margin="5"
                            Click="ShowLog_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderBrush="#4CAF50"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Window>

