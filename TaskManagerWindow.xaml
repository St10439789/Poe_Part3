<Window x:Class="Poe_Part3.TaskManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poe_Part3"
        mc:Ignorable="d"
        Title="TaskManagerWindow" Height="450" Width="800">
  

        <Window.Resources>
            <!-- Global Button Style -->
            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="10,5"
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF2E4DA7"/>
                                    <Setter Property="BorderBrush" Value="#FF2E4DA7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF192C6B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>

        <Grid Margin="20">
            <Border Background="White"
                CornerRadius="12"
                BorderBrush="#FF1E3A8A"
                BorderThickness="2"
                Padding="20"
                SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Direction="270"/>
                </Border.Effect>

                <Grid>
                    <!-- Title -->
                    <TextBlock Text="Task Manager"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1E3A8A"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15" />

                    <!-- Task List -->
                    <ListBox x:Name="taskListBox"
                         Margin="0,50,0,100"
                         Background="#EEF3FB"
                         BorderBrush="#CCC"
                         Foreground="#222"
                         FontSize="14"
                         BorderThickness="1"
                         SnapsToDevicePixels="True" />

                <!-- Mouse Position Tracker -->
                <Border CornerRadius="8" Background="White" Padding="6"
        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,10" Panel.ZIndex="10">
                    <TextBlock x:Name="MousePositionDisplay"
               FontSize="14"
               FontWeight="Bold"
               Foreground="#1E3A8A"
               Text="X: 0, Y: 0"/>
                </Border>


                <!-- Buttons Panel -->
                    <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10">
                        <Button Content="Add Task"
                            Width="120"
                            Margin="5"
                            Click="AddTask_Click"
                            Background="#1E3A8A"
                            Foreground="White"
                            BorderBrush="#1E3A8A"
                            FontWeight="Bold"/>
                        <Button Content="Mark Complete"
                            Width="140"
                            Margin="5"
                            Click="CompleteTask_Click"
                            Background="#1E3A8A"
                            Foreground="White"
                            BorderBrush="#1E3A8A"
                            FontWeight="Bold"/>
                        <Button Content="Delete Task"
                            Width="120"
                            Margin="5"
                            Click="DeleteTask_Click"
                            Background="#B22222"
                            Foreground="White"
                            BorderBrush="#B22222"
                            FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Window>

